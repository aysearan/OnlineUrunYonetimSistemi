@model IEnumerable<OnlineUrunYonetimi.Models.Product>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="container mt-5">
    <div class="header-section mb-5 p-4 rounded-4 bg-white shadow-lg border-0 animate__animated animate__fadeInDown">
        <div class="row align-items-center">
            <div class="col-lg-6 text-start">
                <h1 class="display-6 fw-extrabold text-dark mb-1">Ürün <span class="text-primary">Portalı</span></h1>
                <p class="text-muted">Envanterinizdeki toplam <span class="badge bg-primary rounded-pill">@Model.Count()</span> ürünü yönetiyorsunuz.</p>
            </div>
            <div class="col-lg-6 text-lg-end">
                <a asp-action="Create" class="btn btn-main-add py-3 px-5 shadow">
                    <i class="fa-solid fa-plus-circle me-2"></i> Yeni Ürün Tanımla
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-lg border-0 rounded-4 overflow-hidden animate__animated animate__fadeInUp">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="ps-4 py-3">Ürün Detayları</th>
                        <th>Fiyatlandırma</th>
                        <th>Kayıt Tarihi</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm me-3 bg-light rounded-3 text-primary d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                                        <i class="fa-solid fa-box fs-5"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark mb-0">@product.Name</div>
                                        <small class="text-muted d-block text-truncate" style="max-width: 200px;">@product.Description</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="fw-bold text-success fs-5">
                                    ₺@product.Price.ToString("N2")
                                </div>
                            </td>
                            <td>
                                <div class="text-muted small">
                                    <i class="fa-regular fa-calendar-check me-1"></i> @product.CreatedDate.ToShortDateString()
                                </div>
                            </td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="action-btn-wide btn-edit shadow-sm" title="Düzenle">
                                        <i class="fa-solid fa-pen-nib me-2"></i> <span>Düzenle</span>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@product.Id" class="action-btn-wide btn-detail shadow-sm" title="Detay">
                                        <i class="fa-solid fa-circle-info me-2"></i> <span>İncele</span>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@product.Id" class="action-btn-wide btn-delete shadow-sm" title="Sil">
                                        <i class="fa-solid fa-trash-can me-2"></i> <span>Sil</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>