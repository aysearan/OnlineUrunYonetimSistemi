@model Product

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">

                <div class="p-4 border-bottom bg-light">
                    <h4 class="fw-bold text-dark mb-1">
                        <i class="fa-solid fa-pen-to-square text-primary me-2"></i>Ürünü Güncelle
                    </h4>
                    <p class="text-muted small mb-0">Ürün bilgilerini aşağıdan revize edebilirsiniz.</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form method="post">
                        @if (Model != null)
                        {
                            <input type="hidden" asp-for="Id" />
                        }

                        <div class="mb-4">
                            <label class="form-label fw-semibold text-secondary small">ÜRÜN ADI</label>
                            <input asp-for="Name" class="form-control form-control-lg border-2 shadow-none"
                                   style="border-color: #f1f3f5; background-color: #f8f9fa;" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold text-secondary small">SATIŞ FİYATI</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-white border-2 border-end-0 text-muted" style="border-color: #f1f3f5;">₺</span>
                                <input asp-for="Price" class="form-control border-2 border-start-0 shadow-none"
                                       style="border-color: #f1f3f5; background-color: #f8f9fa;" type="number" step="0.01" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold text-secondary small">AÇIKLAMA</label>
                            <textarea asp-for="Description" class="form-control border-2 shadow-none"
                                      style="border-color: #f1f3f5; background-color: #f8f9fa;" rows="3"></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary py-2 fw-bold rounded-3 shadow-sm border-0"
                                    style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);">
                                <i class="fa-solid fa-floppy-disk me-2"></i>Güncelleştirmeleri Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-link btn-sm text-decoration-none text-muted mt-2">
                                <i class="fa-solid fa-chevron-left me-1"></i>Vazgeç ve Listeye Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>