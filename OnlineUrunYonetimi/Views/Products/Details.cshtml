@model Product
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="glass-form-card">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <h2 class="fw-bold m-0 text-primary">Ürün Özeti</h2>
                    <span class="badge bg-primary px-3 py-2 rounded-pill small">Aktif Ürün</span>
                </div>

                <div class="detail-item">
                    <div class="detail-icon"><i class="fa-solid fa-tag"></i></div>
                    <div><small class="text-muted d-block">Ürün Adı</small><strong>@Model.Name</strong></div>
                </div>

                <div class="detail-item">
                    <div class="detail-icon"><i class="fa-solid fa-money-bill-wave"></i></div>
                    <div><small class="text-muted d-block">Birim Fiyat</small><strong class="text-success fs-5">₺@Model.Price.ToString("N2")</strong></div>
                </div>

                <div class="detail-item">
                    <div class="detail-icon"><i class="fa-solid fa-align-left"></i></div>
                    <div><small class="text-muted d-block">Açıklama</small><strong>@Model.Description</strong></div>
                </div>

                <div class="detail-item">
                    <div class="detail-icon"><i class="fa-solid fa-calendar"></i></div>
                    <div><small class="text-muted d-block">Kayıt Tarihi</small><strong>@Model.CreatedDate.ToString("F")</strong></div>
                </div>

                <div class="mt-4 pt-3 border-top d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning flex-grow-1 py-2 text-white">
                        <i class="fa-solid fa-pen-to-square me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-secondary px-4">Listeye Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>