@model Product

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white animate__animated animate__fadeIn">

                <div class="p-4 border-bottom bg-light">
                    <h4 class="fw-bold text-dark mb-1">
                        <i class="fa-solid @(Model == null || Model.Id == 0 ? "fa-plus-circle" : "fa-pen-to-square") text-primary me-2"></i>
                        @(Model == null || Model.Id == 0 ? "Yeni Ürün Tanımla" : "Ürünü Güncelle")
                    </h4>
                    <p class="text-muted small mb-0">Lütfen gerekli alanları doldurarak kaydedin.</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form method="post">
                        @if (Model != null && Model.Id != 0)
                        {
                            <input type="hidden" asp-for="Id" />
                        }

                        <div class="mb-4">
                            <label class="form-label small fw-bold text-secondary text-uppercase">Ürün Adı</label>
                            <input asp-for="Name" class="form-control form-control-lg border-2 shadow-none custom-input-minimal"
                                   placeholder="Örn: Akıllı Saat" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label small fw-bold text-secondary text-uppercase">Satış Fiyatı</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-white border-2 border-end-0 text-muted px-3">₺</span>
                                <input asp-for="Price" class="form-control border-2 border-start-0 shadow-none custom-input-minimal"
                                       type="number" step="0.01" placeholder="0.00" required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label small fw-bold text-secondary text-uppercase">Ürün Açıklaması</label>
                            <textarea asp-for="Description" class="form-control border-2 shadow-none custom-input-minimal"
                                      rows="3" placeholder="Ürün özelliklerini kısaca belirtin..."></textarea>
                        </div>

                        <div class="d-grid gap-2 mt-5">
                            <button type="submit" class="btn btn-primary py-3 fw-bold rounded-3 shadow-sm border-0 btn-modern-action">
                                <i class="fa-solid fa-check-circle me-2"></i>
                                @(Model == null || Model.Id == 0 ? "Ürünü Kaydet" : "Değişiklikleri Uygula")
                            </button>
                            <a asp-action="Index" class="btn btn-link btn-sm text-decoration-none text-muted mt-1">
                                <i class="fa-solid fa-chevron-left me-1"></i> Listeye Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>