@model IEnumerable<OnlineUrunYonetimi.Models.Product>

@{
    ViewData["Title"] = "Ürün Portalı";
}

<div class="container mt-5">
    <div class="header-section mb-5 p-5 rounded-4 bg-white shadow-lg border-0 position-relative overflow-hidden">

        <div class="row align-items-center position-relative">
            <div class="col-md-7 text-start">
                <h1 class="display-4 fw-bold text-dark mb-2">Ürün <span class="text-primary">Portalı</span></h1>
                <p class="lead text-muted mb-4">Envanterinizdeki ürünleri profesyonelce yönetin ve takip edin.</p>

                <div class="d-flex gap-3 mt-2">
                    <div class="stat-card p-3 rounded-3 bg-primary bg-opacity-10 border border-primary border-opacity-25">
                        <span class="d-block small text-primary fw-bold">TOPLAM ÜRÜN</span>
                        <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                    </div>
                    <div class="stat-card p-3 rounded-3 bg-success bg-opacity-10 border border-success border-opacity-25">
                        <span class="d-block small text-success fw-bold">TOPLAM DEĞER</span>
                        <h3 class="mb-0 fw-bold">₺@Model.Sum(x => x.Price).ToString("N0")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-5 text-md-end mt-4 mt-md-0">
                <a asp-action="Create" class="btn btn-main-add py-3 px-5 shadow-lg">
                    <i class="fa-solid fa-plus-circle me-2"></i> Yeni Ürün Tanımla
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-lg border-0 rounded-4 overflow-hidden animate__animated animate__fadeInUp">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="ps-4 py-4 text-uppercase fs-7 tracking-wider">Ürün Bilgisi</th>
                        <th class="py-4 text-uppercase fs-7 tracking-wider">Fiyatlandırma</th>
                        <th class="py-4 text-uppercase fs-7 tracking-wider">Eklenme</th>
                        <th class="text-center py-4 text-uppercase fs-7 tracking-wider">Yönetim</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    @foreach (var product in Model)
                    {
                        <tr class="transition-all">
                            <td class="ps-4 py-4">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-icon me-3 bg-gradient-primary rounded-3 d-flex align-items-center justify-content-center shadow-sm" style="width: 48px; height: 48px;">
                                        <i class="fa-solid fa-box-open text-white fs-5"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark fs-5">@product.Name</div>
                                        <div class="text-muted small text-truncate" style="max-width: 250px;">
                                            <i class="fa-solid fa-quote-left me-1 opacity-50"></i>@product.Description
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="price-tag p-2 px-3 rounded-3 bg-light border d-inline-block">
                                    <span class="fw-bold text-success fs-5">₺@product.Price.ToString("N2")</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="text-dark fw-medium">@product.CreatedDate.ToString("dd MMM yyyy")</span>
                                    <small class="text-muted">@product.CreatedDate.ToString("HH:mm")</small>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="action-btn-wide btn-edit shadow-sm" title="Düzenle">
                                        <i class="fa-solid fa-pen-nib me-2"></i>
                                        <span>Düzenle</span>
                                    </a>

                                    <a asp-action="Details" asp-route-id="@product.Id" class="action-btn-wide btn-detail shadow-sm" title="İncele">
                                        <i class="fa-solid fa-eye me-2"></i>
                                        <span>İncele</span>
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@product.Id" class="action-btn-wide btn-delete shadow-sm" title="Kaldır">
                                        <i class="fa-solid fa-trash-can me-2"></i>
                                        <span>Sil</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>